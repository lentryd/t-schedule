{
  "name": "t-schedule",
  "private": true,
  "version": "1.0.0",
  "description": "Бот для выгрузки расписания Т-университета",
  "scripts": {
    "serve": "npm run build && concurrently \"tsc -w\" \"nodemon --watch dist dist/index.js\" ",
    "start": "npm run build && node dist/index.js",
    "build": "npm run copy && tsc",
    "copy": "copyfiles -u 2 src/assets/* dist/assets"
  },
  "author": "lentryd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lentryd/t-schedule.git"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.7.0",
    "@googleapis/calendar": "^9.3.1",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0",
    "telegraf": "^4.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@types/node-cron": "^3.0.8",
    "@types/node-fetch": "^2.6.5",
    "concurrently": "^8.2.1",
    "copyfiles": "^2.4.1",
    "node-cron": "^3.0.2",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
